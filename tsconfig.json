{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": [ "esnext" ],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",

        "plugins": [
            {
                "name": "next"
            }
        ],

        "paths": {
            "@src/*": [
                "./src/*"
            ]
        }
    },

    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],

    "exclude": [
        "node_modules"
    ]
}
